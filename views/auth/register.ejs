<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <div class="text-center mb-3">
          <i class="bi bi-person-plus fs-1 text-primary"></i>
          <h5 class="mt-2 mb-0">Create your account</h5>
          <div class="text-muted small">OTP verification required</div>
        </div>
        <% const f = (typeof form !== 'undefined' && form) ? form : {}; %>
        <form method="POST" action="/register" class="vstack gap-3" enctype="multipart/form-data">
          <div>
            <label class="form-label small">Full Name</label>
            <input name="name" class="form-control" required value="<%= f.name || '' %>">
          </div>
          <div>
            <label class="form-label small">Email</label>
            <input name="email" type="email" class="form-control" required value="<%= f.email || '' %>">
          </div>
          <div>
            <label class="form-label small">Password</label>
            <input name="password" type="password" class="form-control" required minlength="6">
          </div>
          <!-- optional: allow avatar upload at signup -->
          <!-- <div>
            <label class="form-label small">Profile Image (optional)</label>
            <input type="file" name="avatar" class="form-control" accept="image/*">
          </div> -->
          <button class="btn btn-primary w-100">Register</button>
          <div class="text-center small">Already registered? <a href="/login">Login</a></div>
        </form>
      </div>
    </div>
  </div>
</div>
